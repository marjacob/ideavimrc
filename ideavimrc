let mapleader = ","

" https://github.com/JetBrains/ideavim/blob/master/doc/set-commands.md
set clipboard=unnamedplus,unnamed,ideaput
set hlsearch
set ideajoin
set ignorecase
set incsearch
set notimeout
set number
set relativenumber
set scrolloff=5
set showmode
set smartcase
set visualbell

inoremap jk <Esc>

inoremap <Leader>" Æ
inoremap <Leader>' æ
inoremap <Leader>: Ø
inoremap <Leader>; ø
inoremap <Leader>E É
inoremap <Leader>[ å
inoremap <Leader>e é
inoremap <Leader>{ Å

nnoremap <C-H> :action PrevSplitter<CR>
nnoremap <C-L> :action NextSplitter<CR>
nnoremap <silent> <Leader><Leader> :action HideActiveWindow<CR>
nnoremap <silent> <Leader><Space> :nohlsearch<CR>
nnoremap <silent> <Leader>B :action Build<CR>
nnoremap <silent> <Leader>D :action Debug<CR>
nnoremap <silent> <Leader>R :action Run<CR>
nnoremap <silent> <Leader>bb :action GotoFile<CR>
nnoremap <silent> <Leader>bd :action CloseEditor<CR>
nnoremap <silent> <Leader>bn :action NextTab<CR>
nnoremap <silent> <Leader>bp :action PreviousTab<CR>
nnoremap <silent> <Leader>f :action ReformatCode<CR>
nnoremap <silent> <Leader>q :action Exit<CR>
nnoremap <silent> <Leader>r :action IdeaVim.ReloadVimRc.reload<CR>

command! Debug action Debug
command! Make action Build